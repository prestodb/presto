<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.facebook.presto</groupId>
        <artifactId>presto-root</artifactId>
        <version>0.293-SNAPSHOT</version>
    </parent>

    <artifactId>presto-thrift-spec</artifactId>

    <properties>
        <air.main.basedir>${project.parent.basedir}</air.main.basedir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.facebook.presto</groupId>
            <artifactId>presto-common</artifactId>
        </dependency>

        <dependency>
            <groupId>com.facebook.presto</groupId>
            <artifactId>presto-spi</artifactId>
        </dependency>

        <dependency>
            <groupId>com.facebook.presto</groupId>
            <artifactId>presto-main-base</artifactId>
        </dependency>

        <dependency>
            <groupId>com.facebook.drift</groupId>
            <artifactId>drift-idl-generator</artifactId>
            <version>1.22</version>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>

        <!-- for testing -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <ignoredDependencies>
                        <ignoredDependency>com.facebook.presto:presto-common</ignoredDependency>
                        <ignoredDependency>com.facebook.presto:presto-spi</ignoredDependency>
                        <ignoredDependency>com.facebook.presto:presto-main-base</ignoredDependency>
                        <ignoredDependency>com.facebook.airlift:stats</ignoredDependency>
                    </ignoredDependencies>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.facebook.drift</groupId>
                <artifactId>drift-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>execution</id>
                        <goals>
                            <goal>generate-thrift-idl</goal>
                        </goals>
                        <phase>process-classes</phase>
                        <configuration>
                            <classes>
                                <class>com.facebook.airlift.stats.Distribution$DistributionSnapshot</class>
                                <class>com.facebook.presto.client.ErrorLocation</class>
                                <class>com.facebook.presto.common.ErrorCode</class>
                                <class>com.facebook.presto.common.ErrorType</class>
                                <class>com.facebook.presto.common.QualifiedObjectName</class>
                                <class>com.facebook.presto.common.transaction.TransactionId</class>
                                <class>com.facebook.presto.common.Subfield$NestedField</class>
                                <class>com.facebook.presto.common.Subfield$LongSubscript</class>
                                <class>com.facebook.presto.common.type.TimeZoneKey</class>
                                <class>com.facebook.presto.execution.ExecutionFailureInfo</class>
                                <class>com.facebook.presto.execution.Lifespan</class>
                                <class>com.facebook.presto.execution.TaskState</class>
                                <class>com.facebook.presto.operator.BlockedReason</class>
                                <class>com.facebook.presto.spi.ErrorCause</class>
                                <class>com.facebook.presto.spi.HostAddress</class>
                                <class>com.facebook.presto.spi.security.SelectedRole$Type</class>
                                <class>com.facebook.presto.spi.security.SelectedRole</class>
                                <class>com.facebook.presto.spi.session.ResourceEstimates</class>
                                <class>com.facebook.presto.spi.SchemaTableName</class>
                                <class>com.facebook.presto.spi.SourceLocation</class>
                            </classes>
                            <namespaces>
                                <cpp>facebook.presto.protocol</cpp>
                            </namespaces>
                            <recursive>true</recursive>
                            <outputFile>target/thrift/presto-internal-${project.version}-common.thrift</outputFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/thrift/presto-internal-${project.version}-common.thrift</file>
                                    <type>thrift</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
