        </dependency>

        <dependency>
            <groupId>com.facebook.presto</groupId>
            <artifactId>presto-thrift-connector</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
