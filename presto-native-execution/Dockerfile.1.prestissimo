ARG CPU_TARGET=avx
ARG TARGETPLATFORM=linux/amd64
ARG IMAGE_TAG=latest
ARG IMAGE_REGISTRY=prestodb/${CPU_TARGET}
ARG BUILDTIME_IMAGE=centos8-prestissimo-buildtime
ARG RUNTIME_IMAGE=centos8-prestissimo-runtime

FROM --platform=$TARGETPLATFORM ${IMAGE_REGISTRY}/${BUILDTIME_IMAGE}:${IMAGE_TAG} as build-stage

ENV PRESTO_HOME="/opt/presto-server"
ENV PATH=/opt/dependency/install/bin:/opt/dependency/install/bin/hadoop-2.10.1/bin:$PATH
RUN mkdir -p $PRESTO_HOME
ADD ./ $PRESTO_HOME/_build/

WORKDIR $PRESTO_HOME
RUN set +u && \
    source /opt/rh/gcc-toolset-9/enable && \
    source $PRESTO_HOME/_build/velox/scripts/setup-helper-functions.sh && \
    NO_SYNCH=True make --directory="$PRESTO_HOME/_build/" release \
        PRESTO_ENABLE_PARQUET=ON \
        PRESTO_ENABLE_S3=ON \
        PRESTO_ENABLE_HDFS=ON \
        PRESTO_ENABLE_TESTING=OFF \
        TREAT_WARNINGS_AS_ERRORS=OFF \
        NUM_THREADS=8 \
        MAX_HIGH_MEM_JOBS=8 \
        MAX_LINK_JOBS=8
RUN ls -al && \
    mv "$(find $(pwd) | grep 'presto_server$')" $PRESTO_HOME && \
    chmod uga+x "$PRESTO_HOME/presto_server"

#/////////////////////////////////////////////
#          centos8-prestissimo-runtime
#//////////////////////////////////////////////
FROM --platform=$TARGETPLATFORM ${IMAGE_REGISTRY}/${RUNTIME_IMAGE}:${IMAGE_TAG}

LABEL org.opencontainers.image.title="prestissimo"
LABEL org.opencontainers.image.description="Prestissimo, a presto-native-execution Velox based query engine worker container for use in datalakes and benchmarking."
LABEL org.opencontainers.image.vendor="Ahana, Intel and Meta Corporations collaboration"
LABEL org.opencontainers.image.version="1.0.0"
LABEL org.opencontainers.image.authors="milosz.linkiewicz@intel.com"

USER presto
ENV PRESTO_HOME="/opt/presto-server"
ENV PATH=$PRESTO_HOME:$PATH
COPY --chown=186:root --chmod=0775 --from=build-stage $PRESTO_HOME/presto_server $PRESTO_HOME/presto_server
COPY --chown=186:root --chmod=0775 --from=build-stage /usr/local/lib64/lib* /usr/lib64/lib* /usr/local/lib64/
COPY --chown=186:root --chmod=0775 --from=build-stage /usr/local/lib/lib* /usr/local/lib/

